<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_contacts"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/activity_layout_style"
    android:background="@color/bk1"
    >


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/m_toolbar"
        style="@style/toolbar_style"
        app:contentInsetStart="0dp"
        app:contentInsetEnd="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_btn"
                style="@style/back_btn"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/textView"
                style="@style/toolbar_text_style"
                android:text="ارتقای برنامه"/>

            <ImageView
                android:id="@+id/rate_btn"
                style="@style/back_btn"
                android:paddingRight="12dp"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_like" />

            <ImageView
                android:id="@+id/mail_btn"
                style="@style/back_btn"
                android:paddingRight="0dp"
                android:paddingLeft="8dp"
                android:paddingTop="10dp"
                android:paddingBottom="8dp"
                android:layout_toLeftOf="@+id/rate_btn"
                android:src="@drawable/ic_mail" />


            <Button
                android:id="@+id/get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="get"
                android:visibility="gone"
                />

        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/m_toolbar"
        android:layout_marginTop="1dp"
        android:foregroundGravity="center_horizontal"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/m_l"
                android:paddingTop="@dimen/m"
                android:fontFamily="@font/b_yekan_bold"
                android:textSize="22sp"
                android:layout_gravity="center_horizontal"
                android:text="">
            </TextView>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/m_l"
                android:fontFamily="@font/b_yekan"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:layout_below="@id/tv"
                android:text="">
            </TextView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv2"
                android:layout_marginTop="@dimen/l">

                <ImageView
                    android:id="@+id/donate_bk_btn"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:background="@drawable/bkg_button_donate"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/donate_pic_btn"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/ic_pay"
                    android:layout_marginTop="0.5dp"
                    android:layout_marginBottom="0.5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/donate_bk_btn"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="حمایت می کنم!"
                    android:textSize="24sp"
                    android:fontFamily="@font/b_yekan"
                    android:textColor="@color/primaryTextColor"
                    app:layout_constraintBottom_toBottomOf="@+id/donate_bk_btn"
                    app:layout_constraintEnd_toEndOf="@+id/donate_bk_btn"
                    app:layout_constraintStart_toStartOf="@+id/donate_bk_btn"
                    app:layout_constraintTop_toTopOf="@+id/donate_bk_btn" />

            </androidx.constraintlayout.widget.ConstraintLayout>






        </RelativeLayout>


    </ScrollView>


</RelativeLayout>