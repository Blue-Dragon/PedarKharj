<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".pages.AddExpenseActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/m_toolbar"
        style="@style/toolbar_style">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:src="@drawable/back" />

            <Switch
                android:id="@+id/switch1"
                style="@style/medium_koodak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:text="انتخاب همه" />


        </RelativeLayout>


    </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize">


            <RelativeLayout
                android:id="@+id/downerPage_addExpense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF">

                <!-- categories -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@id/addDigit_addExpense"
                    android:layout_marginBottom="50dp">

                    <RelativeLayout
                        android:id="@+id/upperPage_addExpense"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#00FFFFFF">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/participants_RecView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </android.support.v7.widget.RecyclerView>

                    </RelativeLayout>

                </HorizontalScrollView>



                <!-- result of calc -->
                <RelativeLayout
                    android:id="@+id/addDigit_addExpense"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_above="@+id/calculator"
                    android:background="@drawable/bkg_field"
                    android:gravity="center_vertical"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:visibility="visible">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/selected_contact"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/profile"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:layout_centerVertical="true"
                        />

                    <ImageView
                        android:id="@+id/write_img"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_toLeftOf="@+id/selected_contact"
                        android:layout_marginRight="10dp"
                        android:paddingTop="1dp"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/write" />

                    <TextView
                        android:id="@+id/price_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#000"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/dong_Etxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/large_koodak"
                        android:maxLines="1"
                        android:ems="500"
                        android:inputType="textPersonName"
                        android:layout_toLeftOf= "@+id/write_img"
                        android:layout_toRightOf="@+id/price_txt"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="10dp"
                        android:paddingBottom="6dp"
                        android:hint="چی خریده؟"
                        android:backgroundTint="#00FFFFFF"
                        />


                </RelativeLayout>

                <!-- calculator -->
                <LinearLayout
                    android:id="@+id/calculator"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:visibility="visible">


                    <LinearLayout
                        style="@style/calcHorizLayout">
                        <!-- Row 1 -->
                        <Button
                            android:text="7"
                            android:id="@+id/b7"
                            style="@style/calcAction"/>
                        <Button
                            android:text="8"
                            android:id="@+id/b8"
                            style="@style/calcAction"/>
                        <Button
                            android:text="9"
                            android:id="@+id/b9"
                            style="@style/calcAction" />
                        <Button
                            android:id="@+id/date_btn"
                            android:text="Today\n8/16"
                            android:textSize="14dp"
                            style="@style/calcAction" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/calcHorizLayout">
                        <!-- Row 2 -->
                        <Button
                            android:text="4"
                            android:id="@+id/b4"
                            style="@style/calcAction" />

                        <Button
                            style="@style/calcAction"
                            android:id="@+id/b5"
                            android:text="5" />
                        <Button
                            android:text="6"
                            android:id="@+id/b6"
                            style="@style/calcAction" />
                        <RelativeLayout
                            android:id="@+id/plus_btn"
                            style="@style/calcAction"
                            android:onClick="onClick"
                            android:clickable="true"
                            android:focusable="true">

                            <TextView
                                android:id="@+id/buyer_btn_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="7dp"
                                android:layout_marginLeft="7dp"
                                android:layout_centerVertical="true"
                                android:text="+"
                                android:gravity="center"
                                style="@style/calcAction"
                                android:background="@color/colorTransparent"/>

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        style="@style/calcHorizLayout">
                        <!-- Row 3 -->
                        <Button
                            android:text="1"
                            android:id="@+id/b1"
                            style="@style/calcAction" />
                        <Button
                            android:text="2"
                            android:id="@+id/b2"
                            style="@style/calcAction"/>
                        <Button
                            android:text="3"
                            android:id="@+id/b3"
                            style="@style/calcAction" />

                        <Button
                            android:text="-"
                            android:id="@+id/minus_btn"
                            style="@style/calcAction" />


                    </LinearLayout>

                    <LinearLayout
                        style="@style/calcHorizLayout">
                        <!-- Row 4 -->
                        <Button
                            android:id="@+id/custom_dong_btn"
                            android:padding="6dp"
                            android:text="دنگ های متفاوت؟"
                            style="@style/calcAction"
                            android:textColor="#CC0707"
                            android:fontFamily="@font/b_koodak"
                            android:textSize="15dp"/>

                        <Button
                            android:text="0"
                            android:id="@+id/b0"
                            style="@style/calcAction"/>

                        <Button
                            android:text=' del '
                            android:fontFamily="@font/b_koodak"
                            android:id="@+id/bkSpace"
                            style="@style/calcAction"/>


                        <Button
                            android:id="@+id/done_btn"
                            android:text="Done"
                            style="@style/calcDoneBtn"
                            android:onClick="onClick"/>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>




        </LinearLayout>

</RelativeLayout>