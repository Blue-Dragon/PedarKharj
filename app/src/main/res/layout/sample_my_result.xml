<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/details_card_layout"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layoutDirection="ltr"
    android:elevation="8dp"
    card_view:cardCornerRadius="2dp">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/rl_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center">


        <ImageView
            android:id="@+id/sep1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:rotation="90"
            android:scaleY="0.2"
            card_view:layout_constraintBottom_toBottomOf="@+id/tv_my_dong"
            card_view:layout_constraintEnd_toStartOf="@+id/tv_my_dong"
            card_view:layout_constraintStart_toEndOf="@+id/tv_my_result"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_title_my_dong"
            card_view:layout_constraintVertical_bias="1.0"
            card_view:srcCompat="@drawable/ic_remove_black_24dp" />

        <ImageView
            android:id="@+id/sep2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:rotation="90"
            android:scaleY="0.2"

            card_view:layout_constraintBottom_toBottomOf="@+id/tv_my_dong"
            card_view:layout_constraintEnd_toStartOf="@+id/tv_my_expense"
            card_view:layout_constraintStart_toEndOf="@+id/tv_my_dong"
            card_view:layout_constraintTop_toTopOf="@+id/tv_my_dong"
            card_view:srcCompat="@drawable/ic_remove_black_24dp" />

        <TextView
            android:id="@+id/tv_title_my_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/b_koodak"
            android:gravity="center"
            android:text="حساب من"
            android:textColor="#000000"
            android:textSize="12sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/tv_title_my_dong"
            card_view:layout_constraintEnd_toEndOf="@+id/tv_my_result"
            card_view:layout_constraintStart_toStartOf="@+id/tv_my_result"
            card_view:layout_constraintTop_toTopOf="@+id/tv_title_my_dong" />


        <TextView
            android:id="@+id/tv_my_dong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/b_koodak"
            android:text="0"
            android:textColor="#8C8C8C"
            android:textSize="24sp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.501"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_title_my_dong"
            card_view:layout_constraintVertical_bias="0.615" />

        <TextView
            android:id="@+id/tv_title_my_dong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/b_koodak"
            android:gravity="center"
            android:text="خرج های من"
            android:textColor="#8C8C8C"
            android:textSize="12sp"
            card_view:layout_constraintEnd_toEndOf="@+id/tv_my_dong"
            card_view:layout_constraintStart_toStartOf="@+id/tv_my_dong"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_my_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/b_koodak"
            android:text="0"
            android:textColor="#8C8C8C"
            android:textSize="24sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/tv_my_dong"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/tv_my_dong"
            card_view:layout_constraintTop_toBottomOf="@+id/tv_title_my_dong" />

        <TextView
            android:id="@+id/tv_title_my_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/b_koodak"
            android:gravity="center"
            android:text="هزینه کل"
            android:textColor="#8C8C8C"
            android:textSize="12sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/tv_title_my_dong"
            card_view:layout_constraintEnd_toEndOf="@+id/tv_my_expense"
            card_view:layout_constraintStart_toStartOf="@+id/tv_my_expense"
            card_view:layout_constraintTop_toTopOf="@+id/tv_title_my_dong" />

        <TextView
            android:id="@+id/tv_my_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/b_koodak"
            android:text="0"
            android:textColor="#000000"
            android:textSize="24sp"
            card_view:layout_constraintBottom_toBottomOf="@+id/tv_my_dong"
            card_view:layout_constraintEnd_toStartOf="@+id/tv_my_dong"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/tv_my_dong" />

    </android.support.constraint.ConstraintLayout>



</android.support.v7.widget.CardView>