<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/details_card_layout"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layoutDirection="ltr"
    android:elevation="8dp"
    android:layout_marginBottom="@dimen/s_m"
    android:layout_marginTop="@dimen/s_m"
    android:layout_marginRight="@dimen/s_m"
    android:layout_marginLeft="@dimen/s_m"
    card_view:cardCornerRadius="2dp">


    <LinearLayout
        android:id="@+id/rl_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="@dimen/m"
        android:paddingBottom="@dimen/m"
        android:background="@color/white"
        android:gravity="center">


       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="30"
           android:gravity="center"
           android:orientation="vertical">

           <TextView
               android:id="@+id/tv_title_my_result"
               style="@style/triangle_textview"
               android:textColor="#000000"
               android:text="حساب من"
               />
           <Space
               android:layout_width="match_parent"
               android:layout_height="@dimen/ss"/>
           <TextView
               android:id="@+id/tv_my_result"
               style="@style/triangle_textview_2"
               android:text="0"
               android:textColor="#000000"
               />

       </LinearLayout>
        <View
            android:id="@+id/sep1"
            android:layout_width="1dp"
            android:scaleX="0.6"
            android:layout_height="24dp"
            android:background="#1F1F1F"
            android:orientation="vertical" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_my_dong"
                style="@style/triangle_textview"
                android:textColor="#8C8C8C"
                android:text="خرج های من"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/ss"/>
            <TextView
                android:id="@+id/tv_my_dong"
                style="@style/triangle_textview_2"
                android:textColor="#8C8C8C"
                android:text="0"
                />

        </LinearLayout>
        <View
            android:id="@+id/sep2"
            android:layout_width="1dp"
            android:scaleX="0.6"
            android:layout_height="24dp"
            android:background="#1F1F1F"
            android:orientation="vertical" />


        <LinearLayout
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:layout_width="0dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_my_expense"
                style="@style/triangle_textview"
                android:text="هزینه کل"
                android:textColor="#8C8C8C"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/ss"/>
            <TextView
                android:id="@+id/tv_my_expense"
                style="@style/triangle_textview_2"
                android:text="0"
                android:textColor="#8C8C8C"
                />
        </LinearLayout>













    </LinearLayout>



</androidx.cardview.widget.CardView>