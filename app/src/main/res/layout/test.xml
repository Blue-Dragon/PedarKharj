<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageview_event"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:contentDescription="pic"
        android:scaleType="fitXY"
        android:src="@drawable/bk1"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintHorizontal_bias="0.0"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintVertical_bias="0.0" />

    <RelativeLayout
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:paddingLeft="@dimen/s"
        android:paddingRight="@dimen/s"
        android:paddingTop="@dimen/s"
        android:paddingBottom="@dimen/s"
        android:background="#74000000"
        card_view:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="@+id/imageview_event"
        card_view:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/partic_name"
            style="@style/XL_koodak"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_above="@+id/result_txt"
            android:layout_gravity="right"
            android:ellipsize="end"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:text="HappyCoding"
            android:textColor="#DADADA" />

        <TextView
            android:id="@+id/result_txt"
            style="@style/medium_koodak"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="right|center_vertical"
            android:ellipsize="end"
            android:gravity="right|top"
            android:maxLines="1"
            android:text="HappyCoding"
            android:textColor="#DADADA" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>