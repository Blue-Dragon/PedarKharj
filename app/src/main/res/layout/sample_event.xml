<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_layout"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:layout_marginTop="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="15dp"
    card_view:cardCornerRadius="10dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageview_event"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/w"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/partic_name"
            style="@style/XL_koodak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:text="HappyCoding"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/imageview_event" />


        <TextView
            android:id="@+id/result_txt"
            style="@style/medium_koodak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="-10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2dp"
            android:ellipsize="end"
            android:gravity="right|top"
            android:maxLines="1"
            android:text="HappyCoding"
            android:textColor="#696969"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/partic_name" />

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>