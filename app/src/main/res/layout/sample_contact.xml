<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_fuck"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="150dp">

    <RelativeLayout
        android:id="@+id/addContact_Rlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#00FFFFFF"
        android:gravity="center_horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/contact_add_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/q" />

        <TextView
            android:id="@+id/contact_add_tv"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:layout_below="@+id/contact_add_img"
            android:fontFamily="@font/b_koodak"
            android:text="حامد گنجعلی"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:layout_marginTop="9dp"
            android:textSize="12sp" />



    </RelativeLayout>



</RelativeLayout>



