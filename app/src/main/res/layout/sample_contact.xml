<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_fuck"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:background="#00FFFFFF"
    android:layout_width="100dp"
    android:layout_height="150dp">

    <RelativeLayout
        android:id="@+id/addContact_Rlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:paddingBottom="7dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#00FFFFFF"
        android:gravity="center_horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/contact_add_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/q" />

        <TextView
            android:id="@+id/contact_add_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="50dp"
            android:maxLines="1"
            android:layout_below="@+id/contact_add_img"
            android:fontFamily="@font/b_koodak"
            android:text="حامد گنجعلی"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:layout_marginTop="3dp"
            android:textSize="13sp"
            android:ellipsize="end"
            />



    </RelativeLayout>



</RelativeLayout>



